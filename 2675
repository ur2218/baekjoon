#include <iostream>
using namespace std;

int main(){
    int T, R;
    string S;    //char로 해서 틀림. char자료형은 S[j]에서 오류남. 인덱스로 접근할땐 string~!
    cin >> T;
    for (int i=0; i < T; i++){
        cin >> R >> S;
        for (int j=0; j < S.size(); j++){
            cout << string(R,S[j]);
        }
        cout << endl;
    }
}
