#include <iostream>
#include <string>
using namespace std;

int main(){

    int N;

    cin >> N;

    int j = N;
    int k = 1;

    for (int i = 0; i < N; i++){
        
        cout << string(i,' ') <<string(2*j-1,'*') << endl;
        j--;
        
    }

    for (int o = N-1; o > 0; o--){
        
        cout << string(o-1,' ') << string(2*k+1,'*') << endl;
        k++;
        
    }

}
